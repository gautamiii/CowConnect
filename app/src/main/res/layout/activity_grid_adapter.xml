<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gautam.cowconnect.GridAdapter">

    <ImageView
        android:id="@+id/icons"
        android:layout_width="@dimen/ImagelaoutWidth"
        android:layout_height="@dimen/ImagelaoutHeight"
        android:layout_marginLeft="@dimen/ImgaeMarginLeft"
        android:layout_marginTop="@dimen/ImageMarginTop"
        app:srcCompat="@drawable/cowsnap"
        android:background="@drawable/icon_shape"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/letters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/icons"
        android:layout_alignStart="@+id/icons"
        android:layout_below="@+id/icons"
        android:text="Cow Connect"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="@dimen/textSize"
        android:textColor="#000"
        android:layout_marginTop="8dp"
        />

</RelativeLayout>
