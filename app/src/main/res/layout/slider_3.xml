<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#42d7f4"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SHARE"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textSize="@dimen/textsizeoftopword"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/circularImageHeight"
        android:layout_below="@+id/KnowId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/cowshare"
        app:civ_border_color="#ffffff"
        app:civ_border_width="6dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THE PROSPERITY OF OUR GOU-MATA"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="10dp"

        android:textAlignment="center"
        android:textSize="@dimen/secondTextViewTextSize"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/thirdTextViewTextSize"
        android:text="Volunteer,Educate " />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/thirdTextViewTextSize"
        android:text="Spread Awareness" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/thirdTextViewTextSize"
        android:text="Empower Yourself and other Through Training" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/thirdTextViewTextSize"
        android:text="Workshops Field Visits and Conferences." />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/thirdTextViewTextSize"
        android:text="COME JOIN US.TO HELP OUR COWS!" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/thirdTextViewTextSize"
        android:text="Help us,help cows!" />


</LinearLayout>